<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>test</id>
    <formats>
        <format>tar.gz</format>
        <!--<format>dir</format>-->
    </formats>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>app/lib</outputDirectory>
            <scope>compile</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>app/webapp</outputDirectory>
            <includes>
                <include>/*/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>app/config</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/maven-archiver</directory>
            <outputDirectory>app/config</outputDirectory>
            <includes>
                <include>pom.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>app</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>app/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>log</outputDirectory>
            <includes>
                <include></include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>worker</outputDirectory>
            <includes>
                <include></include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>